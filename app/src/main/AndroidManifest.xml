<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artem.studentdatabase" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/title_activity_group" >
        </activity>
        <activity
            android:name=".StudentActivity"
            android:label="@string/title_activity_student" >
        </activity>
        <activity
            android:name=".PersonalInformationsActivity"
            android:label="@string/title_activity_personal_informations"
            android:parentActivityName=".StudentActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.artem.studentdatabase.StudentActivity" />
        </activity>
    </application>

</manifest>
